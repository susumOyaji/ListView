<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="ListView.ListViewPage"
             x:Class="ListView.ListViewPage"
             x:Name="page">
    <ContentPage.BindingContext>
        <vm:ListViewPageViewModel View="{x:Reference page}"/>
    </ContentPage.BindingContext>

  
  

    
    <StackLayout BackgroundColor="Black" >
                    <StackLayout Orientation="Vertical">
                        <StackLayout x:Name="Toplist"  Padding="0,0,0,0" Orientation="Horizontal" HorizontalOptions="Start" Spacing="-0">     
                            <!-- NewYork列全体 -->
                                <Label x:Name="City" 
                                    Text = "Indn"
                                    TextColor = "Yellow"
                                    WidthRequest = "150"
                                    HorizontalTextAlignment = "Start"
                                    VerticalTextAlignment = "Center"
                                    FontSize = "15"/>
                                <Label x:Name="Goingprice"
                                    Text = "{Binding Realprice, StringFormat='{0:N1}'}"
                                    TextColor = "White"
                                    WidthRequest = "150"
                                    HorizontalTextAlignment = "End"
                                    VerticalTextAlignment = "Center"/>
                                <Button x:Name="IndnButton"
                                    Command="{Binding BindingContext.IndnButtonClick, Source={x:Reference page}}"
                                    Text = "{Binding Prev_day}"
                                    TextColor = "Black"
                                    FontSize="10"
                                    BackgroundColor="Gray"/>
                        </StackLayout>

                        <StackLayout x:Name="Ni255list"  Padding="0,0,0,0" Orientation="Horizontal" HorizontalOptions="Start" Spacing="-0">     
                            <!-- Ni255列全体 -->
                                <Label x:Name="Ni255" 
                                    Text = "Ni255"
                                    TextColor = "Yellow"
                                    WidthRequest = "150"
                                    HorizontalTextAlignment = "Start"
                                    VerticalTextAlignment = "Center"
                                    FontSize = "15"/>
                                <Label x:Name="Ni255Goingprice"
                                    Text = "{Binding Realprice, StringFormat='{0:N1}'}"
                                    TextColor = "White"
                                    WidthRequest = "150"
                                    HorizontalTextAlignment = "End"
                                    VerticalTextAlignment = "Center"/>
                                <Button x:Name="Ni255IndnButton"
                                    Command="{Binding BindingContext.IndnButtonClick, Source={x:Reference page}}"
                                    Text = "{Binding Prev_day}"
                                    TextColor = "Black"
                                    FontSize="10"
                                    BackgroundColor="Gray"/>
                        </StackLayout>
                    </StackLayout>

        <StackLayout Orientation="Vertical"  VerticalOptions="Center" Spacing = "-0" >
            <StackLayout x:Name="AssetNameLayout"  Padding="0,0,0,0" Orientation="Horizontal" HorizontalOptions="StartAndExpand">
                <Label x:Name="TitleAsset"
                    Text = "資産状況"
                    TextColor = "White"
                    BackgroundColor="Black"
                    FontSize = "Micro"
                    WidthRequest = "100"
                    HorizontalTextAlignment = "Center"
                    VerticalTextAlignment = "Center"/>

                <Label x:Name="TitleTotal"
                    Text = "投資総額"
                    TextColor = "White"
                    FontSize = "Micro"
                    WidthRequest = "100"
                    HorizontalTextAlignment = "Center"
                    VerticalTextAlignment = "Center"/>

                <Label x:Name="TitleStock"
                    Text = "時価総額"
                    TextColor = "White"
                    FontSize = "Micro"
                    WidthRequest = "100"
                    HorizontalTextAlignment = "Center"
                    VerticalTextAlignment = "Center"/>
                <Label x:Name="Value"
                    Text = "損益"
                    TextColor = "White"
                    FontSize = "Micro"
                    WidthRequest = "100"
                    HorizontalTextAlignment = "Center"
                    VerticalTextAlignment = "Center"/>
            </StackLayout>


            <StackLayout x:Name="IAssetLayout" Padding="0,0,0,0" Orientation = "Horizontal" HorizontalOptions="StartAndExpand" >
                <Label x:Name="AssetM"
                    Text = "Results"
                    TextColor = "Lime"
                    BackgroundColor="Black"   
                    WidthRequest = "100"
                    HorizontalTextAlignment = "Center"
                    VerticalTextAlignment = "Center"
                    FontSize = "Small"/>
                <Label x:Name="Investmen"
                    Text = "{Binding PayAssetprice, StringFormat='{0:N1}'}"
                    TextColor = "Yellow"
                    WidthRequest = "100"
                    HorizontalTextAlignment = "Center"
                    VerticalTextAlignment = "Center"
                    FontSize = "Small"/>
                <Label x:Name="TotalAsset"
                    Text = "{Binding TotalAsset, StringFormat='{0:N1}'}"
                    TextColor = "Yellow"
                    WidthRequest = "100"
                    HorizontalTextAlignment = "Center"
                    VerticalTextAlignment = "Center"
                    FontSize = "Small"/>
                <Button x:Name="GainButton"
                    Command="{Binding PersonalUp}"
                    Text="{Binding UptoAsset, StringFormat='{0:N1}'}"
                    BackgroundColor="Orange"    
                    TextColor="Black"/>
                    <!--"FontAttributes.Bold | FontAttributes.Italic"-->
            </StackLayout>
         </StackLayout>


                        

        <!-- 境界線 -->
        <StackLayout>
            <BoxView Color="#fff"
                 HeightRequest="3"
                 Grid.Row="1" Grid.Column="0" />
        </StackLayout>
        
        
        <!-- Button -->
        <StackLayout Orientation="Horizontal" HorizontalOptions="StartAndExpand">
            <Button x:Name="AddButton"
                Text = "Add"
                WidthRequest = "60"
                HeightRequest = "40"
                BorderColor = "Gray"/>
            <Button x:Name="DelButton"
                Text = "DEL"
                WidthRequest = "60"
                HeightRequest = "40"
                BorderColor = "Gray"/>
            <Label x:Name="spece"
                WidthRequest = "150"
                HeightRequest = "40"/>
            <Button x:Name="Ref"
                Text="Ref."
                Command="{Binding RefCommand}"
                WidthRequest = "60"
                HeightRequest = "40"/>
        </StackLayout>





        <ListView ItemsSource="{Binding ItemList}"  SelectedItem="{Binding YourSelectedItem, Mode=TwoWay}"  HasUnevenRows="false">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <!-- 列全体 -->
                        <StackLayout Orientation="Horizontal" VerticalOptions="Center">
                            <StackLayout  Orientation="Vertical" HorizontalOptions="StartAndExpand">
                                <!-- 上段 -->
                                <StackLayout Padding="0, 0, 0, 0" Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Center">
                                    <!-- 項目名 -->
                                    <Label  Text = "Name"
                                        TextColor="Red"
                                        FontSize="Micro" 
                                        WidthRequest = "50"
                                        HeightRequest="50"       
                                        HorizontalTextAlignment = "Start"
                                        VerticalTextAlignment = "End"/>
                                    <Label  Text = "Stock"
                                        TextColor="Red"
                                        FontSize="Micro"
                                        WidthRequest = "50"
                                        HorizontalTextAlignment = "Start"
                                        VerticalTextAlignment = "End"/>
                                    <Label  Text = "Itemprice"
                                        TextColor="Gray"
                                        FontSize="Micro" 
                                        WidthRequest = "50"
                                        HeightRequest="50"       
                                        HorizontalTextAlignment = "Start"
                                        VerticalTextAlignment = "End"/>
                                    <Label  Text = "Realprice"
                                        TextColor="Gray"
                                        FontSize="Micro"
                                        WidthRequest = "50"
                                        HorizontalTextAlignment = "Start"
                                        VerticalTextAlignment = "End"/>
                                    <Label  Text = "RealValue"
                                        TextColor="Gray"
                                        FontSize="Micro"
                                        WidthRequest = "50"
                                        HorizontalTextAlignment = "Start"
                                        VerticalTextAlignment = "End"/>
                                </StackLayout>
                                <!-- 上段 -->

                                <!-- 下段 -->
                                <StackLayout Padding="0, 0, 0, 0" Orientation="Horizontal" VerticalOptions="Center" HorizontalOptions="StartAndExpand">
                                    <!-- "銘柄"  "price.Name" -->
                                    <Label x:Name = "City"
                                        Text = "{Binding Name}"
                                        TextColor="Olive"
                                        FontSize="Default"   
                                        WidthRequest = "50"
                                        HorizontalTextAlignment = "Start"/>
                                   
                                    <!-- 数量 > -->
                                    <Label x:Name= "Stock"
                                        Text = "{Binding Path= Stocks}"
                                        TextColor = "White"
                                        WidthRequest = "50"   
                                        HorizontalOptions="StartAndExpand"   
                                        HorizontalTextAlignment = "Start"/>


                                    <Label x:Name= "Itemprice"
                                        Text = "{Binding Itemprice}"
                                        TextColor = "White"
                                        WidthRequest = "50"   
                                        HorizontalOptions="StartAndExpand" 
                                        HorizontalTextAlignment = "Start"/>


                                    <Label x:Name= "Realprice"
                                        Text = "{Binding Realprice}"
                                        TextColor = "White"
                                        FontSize="Default"     
                                        WidthRequest = "50"   
                                        HorizontalOptions="StartAndExpand"    
                                        HorizontalTextAlignment = "Start"/>


                                    <Label x:Name= "RealValue"
                                        Text = "{Binding RealValue}"
                                        TextColor = "White"
                                        FontSize="Micro"  
                                        WidthRequest = "50"   
                                        HorizontalOptions="StartAndExpand"     
                                        HorizontalTextAlignment = "Start"/>
                                   
                                  
                              </StackLayout>
                                <!-- 下段 -->
                              </StackLayout>
                                    <Button x:Name="UptoButton"  Text="{Binding Prev_day}"
                                        BackgroundColor="{Binding ButtonColor}"
                                        Command="{Binding BindingContext.ItemCommand, Source={x:Reference page}}"
                                        CommandParameter="{Binding ButtonId}"/>
                              </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>